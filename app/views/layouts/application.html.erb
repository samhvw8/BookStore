<!DOCTYPE html>
<html>
<head>
  <title> <%= yield(:title) %> </title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
<nav class="navbar navbar-default navbar-static-top">
  <div class="row header-container">
    <div class="col-xs-1 vertical-center-container">
      <div class="logo">
        <%= link_to "READ", root_path %>
      </div>
    </div>
    <div class="col-xs-7 vertical-center-container">


      <%= form_tag search_path, :class => 'form-search', :method => 'get' do %>

          <%= search_field_tag :keyword, params[:keyword], placeholder: 'title, name..' %>

      <% end %>


    </div>



    <div class="col-xs-4 vertical-center-container">

      <ul class="nav navbar-nav navbar-right">
        <!-- Authentication Links -->

        <% if logged_in? %>


            <% if current_user.is_admin? %>

                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    Admin Page <span class="glyphicon glyphicon-cog"></span>
                    <span class="caret"></span>
                  </a>

                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to 'Novel', admin_novels_path %></li>
                    <li><%= link_to 'Comic', admin_comics_path %></li>
                  </ul>
                </li>

            <% end %>



            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <%= current_user.name %>
                <span class="subscribe-notification" data-url=<%= get_notification_path %>> </span>
                <span class="caret"></span>
              </a>

              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', profile_path %></li>
                <li>
                  <%= link_to subscribes_path do %>
                      Subscribe
                      <span class="subscribe-notification" data-url=<%= get_notification_path %>></span>
                  <% end %>

                </li>
                <li>
                  <%= link_to 'Logout', logout_path, method: :delete %>
                </li>
              </ul>
            </li>


        <% else %>
            <li><%= link_to 'Sign Up', get_signup_path %></li>
            <li><%= link_to 'Login', get_login_path %></li>
        <% end %>


      </ul>
    </div>
  </div>
</nav>

<% flash.each do |message_type, message| %>
    <div class=" container">
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    </div>
<% end %>
<%= yield %>
<!-- footer -->
<div class="container">
  <div class="footer">

    <div class="row">
      <div class="col-lg-12">
        <ul class="nav nav-pills nav-justified">
          <li>Â© 2013 HLSS</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%= debug(params) if Rails.env.development? %>


</body>
</html>