<div class="container">
  <div class="row">
    <div class="col-xs-3 col-md-2">
      <ul>
        <li>
          <%= link_to 'Novels', admin_novels_path %>
        </li>
        <li>
          <%= link_to 'Comics', admin_comics_path %>
        </li>
      </ul>
    </div>
    <div class="col-xs-9 col-md-10">
      <h2>Comic Manager</h2>
      <div class="row">
        <div class="col-xs-12">
          <div class="pull-right">
            <%= link_to new_admin_comic_path do %>
              <button type="button" class="btn btn-success">New Comic</button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="dashboard-table">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>...</th>
          </tr>
          </thead>
          <tbody>
            <% @comics.each do |comic| %>
              <tr class='clickable-row' data-link="<%= admin_comic_chapters_path(comic) %>">
                <td><%= comic.title %></td>
                <td><%= comic.description.truncate(50) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @comics %>
    </div>
  </div>
</div>