<div class="container read">

  <h1>
    Subscribe list
  </h1>



  <% if @subscribes.blank? %>

      <div class="row">

        <h3>
          Subscribe list is empty
        </h3>

      </div>

  <% else %>

      <table class="table">
        <thead>
        <tr>
          <th>Title</th>
          <th>Type</th>
          <th>Current Reading</th>
          <th>Newest Chap</th>
          <th></th>
        </tr>
        </thead>
        <tbody>

        <% @subscribes.order('id DESC').each do |subscribe| %>
            <% is_novel = subscribe.novel.nil? ? false : true %>

            <tr>
              <td scope="row">

                <% if is_novel %>

                    <%= link_to novel_path(subscribe.novel) do %>
                        <%= subscribe.novel.title %>
                    <% end %>


                <% else %>
                    <%= link_to comic_path(subscribe.comic) do %>
                        <%= subscribe.comic.title %>
                    <% end %>
                <% end %>
              </td>

              <td scope="row">


                <div class="reading-title">
                  <%= subscribe.reading_type %>
                </div>


              </td>
              <td scope="row">


                <div class="reading-title">

                  <% if subscribe.current_chap.nil? %>

                      Not Read Yet

                  <% else %>

                      <%= link_to chapter_path(subscribe.current_chap) do %>
                          <%= subscribe.current_chap.id %>. <%= subscribe.current_chap.no %>.<%= subscribe.current_chap.title %>
                      <% end %>

                  <% end %>
                </div>


              </td>

              <td scope="row">


                <div class="reading-title">

                  <% if subscribe.newest_chap.nil? %>

                      Not Have Yet

                  <% else %>


                      <%= link_to chapter_path(subscribe.newest_chap) do %>
                          <%= subscribe.newest_chap.id %>. <%= subscribe.newest_chap.no %>.<%= subscribe.newest_chap.title %>
                      <% end %>
                  <% end %>
                </div>


              </td>

              <td scope="row">


                <div class="reading-title">
                  <%= link_to subscribe_path(subscribe), method: :delete, data: {confirm: 'Are You Sure?'} do %>
                      <span class='glyphicon glyphicon-trash'></span>
                  <% end %>
                </div>


              </td>

            </tr>

        <% end %>

        </tbody>
      </table>


  <% end %>


</div>